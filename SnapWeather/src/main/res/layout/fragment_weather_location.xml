<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/city_main_layout"
        android:background="#ff252525"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/fr_input_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="20dp">
            <ImageView
                   android:id="@+id/fr_back"
                   android:paddingLeft="5dp"
                   android:paddingTop="2dp"
                   android:paddingRight="5dp"
                   android:paddingBottom="2dp"
                   android:visibility="gone"
                   android:layout_width="34dp"
                   android:layout_height="28dp"
                   android:src="@drawable/ic_back"/>
            <EditText
                   android:id="@+id/fr_input"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="@string/fr_location_add"
                   android:textCursorDrawable="@null"
                   android:singleLine="true"
                   android:layout_weight="1"
                   android:imeOptions="actionNone"
                   android:textColor="@android:color/white"/>
            <ImageView
                   android:id="@+id/fr_search"
                   android:paddingLeft="13dp"
                   android:paddingTop="2dp"
                   android:paddingRight="18dp"
                   android:paddingBottom="2dp"
                   android:layout_width="55dp"
                   android:layout_height="28dp"
                   android:src="@drawable/btn_search_selector"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fr_city_list_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">
            <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:paddingRight="13dp"
                   android:gravity="left|center"
                   android:textSize="15sp"
                   android:text="@string/fr_location_management"
                   android:textColor="@android:color/holo_blue_dark"/>
            <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#11fffffe"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/fr_search_result_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip">
            <TextView
                   android:textSize="12dp"
                   android:textColor="#ff959595"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/fr_location_search_result"/>
            <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#11fffffe"/>
    </LinearLayout>
    <ListView
            android:id="@+id/fr_list_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff252525"
            android:layout_marginRight="10dp"
            android:listSelector="@drawable/list_selector"
            android:divider="#11fffffe"
            android:dividerHeight="1px"
            />
</LinearLayout>